BootStrap: library
From: ubuntu:20.04

%files
    ~/PPI_Prediction_byCoevolution/containers/conda_envs/sequence_tools_environment.yml  /home/conda_envs/sequence_tools_environment.yml 

%post
    apt-get update && apt-get -y upgrade
    apt-get -y install \
    build-essential \
    wget \
    less 
    
    
    # Installing miniconda
    wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh 
    bash  Miniconda3-latest-Linux-x86_64.sh -b -u -p /home/miniconda3 # this install to /home
    

    . /home/miniconda3/etc/profile.d/conda.sh
    

    # this is necessary for nextlfow, so the need envs is activated without extra operation
    echo ". /home/miniconda3/etc/profile.d/conda.sh" >> $SINGULARITY_ENVIRONMENT
    echo "conda activate sequence_tools" >> $SINGULARITY_ENVIRONMENT
    
    
    # #install conda enviroment, here if conda is successfull initialised above, could simply use conda without full path 
    /home/miniconda3/bin/conda env  create  -f /home/conda_envs/sequence_tools_environment.yml
    
    conda activate sequence_tools 
           
    conda info --envs
    
    
    

%environment
    export LC_ALL=C
    export PATH=$PATH:/home/miniconda3/bin/conda # check this:   /root/.bashrc, this is nomal linux exprot grammer "export PATH="/home/miniconda3/bin/conda:$PATH""
    
    

%runscript
    echo "this section defines actions for the container to take when it is executed. (These commands will therefore not be run at build time.)"
    


